<%- include ('header'); %>

    <h1>To do:</h1>

    <form action="/tasks" method="post">
        <input class="todo-input" id="prompt" type="text" name="newItem">
        <button class="todo-button" type="submit" name="button">+</button>
    </form>

    <div class="todo-container">
        <ul class="todo-list">
            <% for (let i=0; i < items.length; i++){ %>
                    <div class="todo">
                        <label for="taskCheck">                        
                            <li class="todo todo-item">
                                <input type="checkbox" id="taskCheck" name="checkbox">
                                <span><%= items[i].taskName %></span>
                            </li>
                    </div>             
            <% } %>
        </ul>
    </div>
 
    <br>
    <form action="/tasks/delete" method="post">
        <button class="emptyBtn" formaction="/tasks/delete" type="submit">Empty ðŸ—‘</button>
    </form>

